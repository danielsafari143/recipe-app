<div class="recipe-show">
  <h2 class="recipe-title"><%= @recipe.name %></h2>
  <p class="recipe-description"><%= @recipe.description %></p>
  <p class="recipe-prep-time"><strong>Preparation Time:</strong> <%= @recipe.preperation_time %> minutes</p>
  <p class="recipe-cooking-time"><strong>Cooking Time:</strong> <%= @recipe.cooking_time %> minutes</p>
  <p class="recipe-public"><strong>Public:</strong> <%= @recipe.public ? 'Yes' : 'No' %></p>

  <h3 class="recipe-foods-title"><strong>Foods:</strong></h3>
  <ul class="recipe-foods-list">
    <% @recipe.foods.each do |food| %>
      <li><%= food.name %></li>
    <% end %>
  </ul>

  <div class="recipe-actions">
    <%= link_to 'Edit', edit_recipe_path(@recipe), class: 'edit-recipe-link' %>
    <% if can? :destroy, @recipe %>
      <%= link_to 'Remove', recipe_path(@recipe), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'remove-recipe-link' %>
    <% end %>
  </div>
</div>
